@model IEnumerable<CarsByRuss.Models.ServiceType>
@{
    ViewData["Title"] = "Index";
}

<h2 class="text-center">Manage Services</h2>
<hr />

<div class="form-border">
    <p>
        <a class="btn btn-sm btn-primary" asp-action="Create">Add New</a>
    </p>
    
    <table class="table table-hover table-condensed">
        <tr>
            <th>
                Service
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
        
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial {ServiceId = @item.Id})
                </td>
            </tr>
        }
    </table>
</div>

