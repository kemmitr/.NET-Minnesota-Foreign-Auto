@model CarsByRuss.Models.Car
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-center">Edit Vehicle Details</h2>

<form asp-action="Edit">
    <div class="form-border">
        <input type="hidden" asp-for="Id"  />
        <input type="hidden" asp-for="UserId"  />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div><a class="btn btn-sm btn btn-success glyphicon glyphicon-arrow-left pull-left" asp-action="Index" asp-route-userId="@Model.UserId"></a></div>
        <br />
        <br/>
        <br />
        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Model" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Model" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Make" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Make" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Year" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Year" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>



        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Style" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Style" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Style" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Miles" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Miles" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Miles" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="VIN" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="VIN" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row">
                <div class="col-sm-1">
                    <label asp-for="Color" class="custom-label"></label>
                </div>
                <div class="col-sm-4">
                    <input asp-for="Color" class="form-control"/>
                </div>
            </div>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <br/>
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-sm btn-primary"/>
        </div>
    </div>
</form>
